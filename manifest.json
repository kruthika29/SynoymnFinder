{
    "manifest_version": 2,
    "name": "Quick Synonym Finder",
    "version": "1.0.0",
    "description": "Find any word's definition",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Find the synonym!"
    }
}